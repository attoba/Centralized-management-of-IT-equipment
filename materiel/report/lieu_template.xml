<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_lieu">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="lieu">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>Lieu:
                            <t t-esc="lieu.lieu"/>
                        </h1>
                        <p>Quantit√©:
                            <t t-esc="lieu.quantite"/>
                        </p>
                        <div class="oe-structure">
                            <div class="row">
                                <style>

                                    .table {
                                    width: 100%;
                                    border-collapse: collapse;
                                    }
                                    .table th, .table td {
                                    border: 1px solid black;
                                    padding: 5px;
                                    }
                                    .table th {
                                    background-color: #f2f2f2;
                                    }
                                    .table img {
                                    max-width: 100px;
                                    max-height: 100px;
                                    }
                                </style>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>N inventaire</th>
                                            <th>Designation</th>
                                            <th>Serie</th>
                                            <th>Configuration</th>
                                            <th>Marque</th>
                                            <th>Photo</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="lieu.mat_ids" t-as="material">
                                            <tr>
                                                <td>
                                                    <t t-esc="material.n_inventaire"/>
                                                </td>
                                                <td>
                                                    <t t-esc="material.designation"/>
                                                </td>
                                                <td>
                                                    <t t-esc="material.serie"/>
                                                </td>
                                                <td>
                                                    <t t-esc="material.configuration"/>
                                                </td>
                                                <td>
                                                    <t t-esc="material.marque"/>
                                                </td>

                                                <td>
                                                    <img t-if="material.photo"
                                                         t-att-src="'data:image/png;base64,' + material.photo.decode('utf-8')"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
